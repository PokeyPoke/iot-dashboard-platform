# Production Environment Variables for Railway
# These will be set in Railway dashboard

# Application
NODE_ENV=production
PORT=3000

# NextAuth (Railway will auto-generate NEXTAUTH_URL)
NEXTAUTH_SECRET="production-secret-key-replace-with-secure-random-string"

# JWT Secrets
JWT_SECRET="production-jwt-secret-replace-with-secure-random-string"
JWT_REFRESH_SECRET="production-jwt-refresh-secret-replace-with-secure-random-string"

# External APIs (Add your API keys)
ALPHA_VANTAGE_API_KEY=""
OPENWEATHER_API_KEY=""
COINAPI_KEY=""
NEWS_API_KEY=""

# Webhook Secrets
ESPN_WEBHOOK_SECRET="webhook-secret-replace-with-secure-string"
SPORTSDATA_WEBHOOK_SECRET="webhook-secret-replace-with-secure-string"
NWS_WEBHOOK_SECRET="webhook-secret-replace-with-secure-string"
TRANSIT_WEBHOOK_SECRET="webhook-secret-replace-with-secure-string"

# Admin User
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="secure-admin-password-replace-me"

# MQTT (Railway internal networking)
MQTT_USERNAME="iot_user"
MQTT_PASSWORD="secure-mqtt-password"

# Railway Environment
RAILWAY_ENVIRONMENT="production"