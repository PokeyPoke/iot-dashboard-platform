{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "web": {
      "build": {
        "buildCommand": "npm install && npx prisma generate --no-engine && npx prisma generate && npm run build"
      },
      "deploy": {
        "startCommand": "echo 'Starting application without migrations for initial deployment...' && npm start",
        "healthcheckTimeout": 300
      }
    },
    "mqtt": {
      "image": "eclipse-mosquitto:2",
      "volumes": [
        {
          "mount": "/mosquitto/data",
          "name": "mqtt-data"
        }
      ],
      "deploy": {
        "restartPolicyType": "ALWAYS"
      }
    }
  }
}