# Database
DATABASE_URL="postgresql://username:password@localhost:5432/iot_dashboard"

# Redis (optional - for caching)
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# API Keys for External Services
NEXT_PUBLIC_ALPHA_VANTAGE_KEY="your-alpha-vantage-api-key"
NEXT_PUBLIC_OPENWEATHER_KEY="your-openweather-api-key"
COINGECKO_API_KEY="your-coingecko-pro-api-key"
NEWS_API_KEY="your-news-api-key"

# MQTT (optional - for IoT devices)
MQTT_BROKER_URL="mqtt://localhost:1883"
MQTT_USERNAME="mqtt_user"
MQTT_PASSWORD="mqtt_password"

# Admin User (for seeding)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"

# App Configuration
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Rate Limiting (requests per hour)
RATE_LIMIT_FREE=1000
RATE_LIMIT_PREMIUM=10000