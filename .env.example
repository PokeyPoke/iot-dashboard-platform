# Database
DATABASE_URL="postgresql://user:password@localhost:5432/iot_dashboard?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-here"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-here"

# Environment
NODE_ENV="development"

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS="http://localhost:3000"

# Security
INTERNAL_API_KEY="your-secure-internal-api-key-here"

# External API Keys (Server-side only, DO NOT prefix with NEXT_PUBLIC_)
ALPHA_VANTAGE_KEY=""
OPENWEATHER_API_KEY=""
NEWS_API_KEY=""

# MQTT Configuration
MQTT_BROKER_URL="mqtt://localhost:1883"
MQTT_USERNAME=""
MQTT_PASSWORD=""

# MQTT Client Retry Configuration
MQTT_RETRY_MAX_RETRIES="5"
MQTT_RETRY_BASE_DELAY="1000"
MQTT_RETRY_MAX_DELAY="30000"
MQTT_RETRY_EXPONENTIAL_BASE="2"

# API Configuration
API_BASE_URL="https://your-domain.com"

# Logging
LOG_LEVEL="info"

# Email Configuration (for future use)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
FROM_EMAIL=""